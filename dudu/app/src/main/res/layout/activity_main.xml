<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dudubackground"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="390dp"
        android:layout_height="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/h1"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">

        </ImageView>
        <ImageView
            android:id="@+id/h2"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="130dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>

        <ImageView
            android:id="@+id/h3"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginStart="260dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>

        <ImageView
            android:id="@+id/h4"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>

        <ImageView
            android:id="@+id/h5"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="240dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>

        <ImageView
            android:id="@+id/h6"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="130dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>
        <ImageView
            android:id="@+id/h7"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="260dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>

        <ImageView
            android:id="@+id/h8"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="260dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>

        <ImageView
            android:id="@+id/h9"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="130dp"
            android:scaleType="fitEnd"
            android:padding="5dp"
            android:src="@drawable/h">
        </ImageView>



        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="390dp"
            android:layout_height="360dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:rowCount="3"
            android:columnCount="3"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView2"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView3"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView4"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView5"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView6"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView7"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView8"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView9"
                android:layout_width="130dp"
                android:scaleType="fitCenter"
                android:layout_height="120dp" />
        </GridLayout>

        <ImageView
            android:id="@+id/timeover"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/timeover"
            android:visibility="invisible"
            android:padding="20dp">

        </ImageView>
        <ImageView
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/restart"
            android:visibility="invisible"
            android:padding="20dp">

        </ImageView>

        <ImageView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="240dp"
            android:src="@drawable/exit"
            android:visibility="invisible"
            android:padding="20dp">

        </ImageView>



    </FrameLayout>

    <TextView
        android:id="@+id/scoremain"
        android:layout_width="140dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/toast"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

    <TextView
        android:id="@+id/time"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/time"
        android:gravity="center"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/scoreupdudu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        android:layout_marginStart="20dp"
        android:src="@drawable/duduup">

    </ImageView>

    <TextView
        android:id="@+id/scoreup"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="105dp"
        app:layout_constraintStart_toEndOf="@id/scoreupdudu"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="15sp">

    </TextView>

    <ImageView
        android:id="@+id/scoredowndudu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/dududown">

    </ImageView>

    <TextView
        android:id="@+id/scoredown"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toEndOf="@id/scoredowndudu"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp">

    </TextView>



    <TextView
        android:id="@+id/scoreText"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/score"
        android:gravity="center"
        android:text="Score: 0"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame"
        app:layout_constraintVertical_bias="0.276" />
</androidx.constraintlayout.widget.ConstraintLayout>